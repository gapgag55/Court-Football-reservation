<odoo>
  <data>
    <record model="ir.ui.view" id="court_book_form_view">
      <field name="name">court.book.form</field>
      <field name="model">court.book</field>
      <field name="arch" type="xml">
        <form string="Court Book Form">
        <header>
          <button string="Set to concept" type="object" name="concept_progressbar"/>
          <!--The oe_highlight class gives the button a red color when it is saved.
          It is usually used to indicate the expected behaviour. -->
          <button string="Set to started" type="object" name="started_progressbar" class="oe_highlight" attrs="{'invisible': [('state','!=','concept')]}"/>
          <button string="In progress" type="object" name="progress_progressbar" attrs="{'invisible': [('state','=','progress')]}"/>
          <button string="Done" type="object" name="done_progressbar" attrs="{'invisible': [('state','=','finished')]}"/>
          <!--This will create the statusbar, thanks to the widget. -->
          <field name="state" widget="statusbar"/>
        </header>
          <sheet>
            <group>
              <group>
                <field name="date"/>
              </group>
              <group>
                <field name="slot_time"/>
              </group>
            </group>
            <group>
              <field name="available_court" />
              <field name="book_type" />
              <field name="member_id" attrs="{'invisible':[('book_type', '!=', 'member')]}" />
              <field name="phone_number" attrs="{'invisible':[('book_type', '!=', 'guest')]}"/>
              <field name="price" readonly="1" />
              <field name="debug" readonly="1" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- override the automatically generated list view for courts -->
    <record model="ir.ui.view" id="court_book_tree_view">
      <field name="name">court.book.tree</field>
      <field name="model">court.book</field>
      <field name="arch" type="xml">
        <tree string="Court Book Tree">
          <field name="member_id"/>
        </tree>
      </field>
    </record>

    <!-- calendar view -->
    <record model="ir.ui.view" id="court_book_calendar_view">
      <field name="name">court.book.calendar</field>
      <field name="model">court.book</field>
      <field name="arch" type="xml">
        <calendar string="Court Calendar" date_start="start_date" date_stop="end_date">
          <field name="member_id"/>
        </calendar>
      </field>
    </record>

    <!-- window action -->
    <record model="ir.actions.act_window" id="court_book_list_action">
      <field name="name">Court Booking</field>
      <field name="res_model">court.book</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,calendar</field>
    </record>

    <!-- top level menu: no parent -->
    <menuitem id="main_court_menu" name="Court Reservation"/>
    <menuitem id="court_book_menu" name="Court Reservation" parent="main_court_menu"/>
    <menuitem id="member_menu" name="Court Booking" parent="court_book_menu" action="court_book_list_action"/>
  </data>
</odoo>